$('.answer-errors').html('<%= render 'shared/errors', resource: answer %>');

<% if !answer.errors.present? %>
  <% if answer.best? %>
    $('#answer-<%= @answer.id %>').html('<%= j render 'best_answer', resource: answer %>')
  <% else %>
    $('#answer-<%= @answer.id %>').html('<%= j render answer.reload %>')
  <% end %>
<% end %>
